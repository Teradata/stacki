if [ -f /etc/redhat-release ]; then
	RELEASE=`cat /etc/redhat-release`
elif [ -f /etc/SuSE-release ]; then
	RELEASE=`head -1 /etc/SuSE-release`
elif [ -f /etc/os-release ]; then
	# sles15 doesn't have SuSE-release
	RELEASE=`grep -e '^NAME=' -e '^VERSION_ID=' /etc/os-release | tr -d '"' | awk -v ORS= -F '=' '{ print $2 }'`
else
	RELEASE='unknown'
fi

case $RELEASE in
	*release?7.*)
		echo redhat7
		;;
	*SUSE*11*)
		echo sles11
		;;
	*SUSE*12*)
		echo sles12
		;;
	*SLES15*)
		echo sles15
		;;
	*)
		echo unknown
		;;
esac
