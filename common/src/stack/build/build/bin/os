OS='unknown'

if [ -x /bin/uname ]; then
    OS=`/bin/uname`
elif [ -x /usr/bin/uname ]; then
    OS=`/usr/bin/uname`
fi

case $OS in
    Linux)
	if [ -f /etc/redhat-release ]; then
		echo redhat
	elif [ -f /etc/SuSE-release ]; then
		echo sles
	elif [ -f /etc/SUSE-brand ]; then
		echo sles
	else
		echo linux
	fi
        ;;
    *)
        echo unknown
        ;;
esac
