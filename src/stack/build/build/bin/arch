ARCH='unknown'

if [ -x /bin/arch ]; then
    ARCH=`/bin/arch`
elif [ -x /usr/bin/arch ]; then
    ARCH=`/usr/bin/arch`
fi

case $ARCH in
    i386|i486|i586|i686)
        echo i386
        ;;
    i86pc)
        echo $ARCH
        ;;
    x86_64|ia64|ppc)
        echo $ARCH
        ;;
    *)
        echo unknown
        ;;
esac
